<% layout('layouts/boilerplate')%>

    <div class="row">
        <h1 class="text-center">Details</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/update_topic" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="username">Github Username</label>
                    <input class="form-control" type="text" id="username" name="username">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="repo_name">Repository Name</label>
                    <input class="form-control" type="text" id="repo_name" name="repo_name" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="token">Personal Access Token(Create one if not created)</label>
                    <input class="form-control" type="text" id="token" name="token" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="topic">Topic to be added(should be in lowercase letters)</label>
                    <input class="form-control" type="text" id="topic" name="topic" required>
                </div>

                <div class="mb-3">
                    <button class="btn btn-success">Submit</button>
                </div>
            </form>
        </div>
    </div>